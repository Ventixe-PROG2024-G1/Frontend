@{
    ViewData["Title"] = "Bookings";
}

<div class="booking-container">
    <section class="bookingstatus-container" id="booking-stats">
    </section>
    <section class="bookingtable-container">
        <header class="bookingtable-header">
            <div class="segmented-control">
                
                <input type="radio" id="status-segment-all" name="status-segment" value="" checked/>
                <label for="status-segment-all">All</label>

                <input type="radio" id="status-segment-confirmed" name="status-segment" value="Confirmed" />
                <label for="status-segment-confirmed">Confirmed</label>

                <input type="radio" id="status-segment-pending" name="status-segment" value="Pending" />
                <label for="status-segment-pending">Pending</label>

                <input type="radio" id="status-segment-cancelled" name="status-segment" value="Cancelled" />
                <label for="status-segment-cancelled">Cancelled</label>
            </div>
        </header>
        <table class="bookingtable">
            <thead>
                <tr class="header-row">                   
                    <th><div class="tableheader-col"><div>Invoice</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th><div class="tableheader-col"><div>Date</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th class="name-col"><div class="tableheader-col"><div>Name</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th><div class="tableheader-col"><div>Event</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th class="category-col"><div class="tableheader-col"><div>Ticket Category</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th class="price-col"><div class="tableheader-col"><div>Price</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th class="qty-col"><div class="tableheader-col"><div>Qty</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th class="ticket-col"><div class="tableheader-col"><div>Ticket</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th class="amount-col"><div class="tableheader-col"><div>Amount</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th><div class="tableheader-col"><div>Status</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                    <th class="voucher-col"><div class="tableheader-col"><div>E-Voucher</div><img src="~/images/icons/Sort.svg" asp-append-version="true" alt="Sort icon" /></div></th>
                </tr>
            </thead>
            <tbody id="booking-table-body">
                
            </tbody>
        </table>
        <footer class="bookingtable-footer">

        </footer>
    </section>
</div>

@section Scripts {
    <script src="~/js/BookingTable.js"></script>
}
